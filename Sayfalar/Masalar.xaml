                 HorizontalOptions="Center"
               
               />-->

            <Button
                Text="masa"
                x:Name="masa1"
                Grid.Column="1"
                Grid.Row="1"
                HorizontalOptions="Center" 
                Clicked="Masa1_ClickedAsync"
                />

            <Entry Placeholder="kullanbıcı giriş"/>
            <Button Text="denme" x:Name="deneme" Clicked="deneme_Clicked"
               Grid.Row="1"
               Grid.Column="2"            
               />


        </Grid>

    </VerticalStackLayout>

</ContentPage>